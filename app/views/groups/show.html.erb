<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>

    <div class='col-md-8 offset-md-1'>
  		<h2>group detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= attachment_image_tag(group), :image. :fill, 100,100, fallback: "no-image-icon.jpg"%></td>
          <td><%= link_to @group.name,group_path %></td>
          <td><%= @group.introduction %></td>
          <td>
             <%= @group.users each do |member| %>
              <%= member.name%></br>
             <% end %>
          </td>
          <td>
             <% if @group.owner_id == current_user.id %>
              <%= link_to "Edit",edit_group_path(@group), class: "btn btn-sm btn-success" %>
              <% elsif @group.users.include?(current_user) %>
              <%= link_to "Leave this group",edit_group_path(@group),method: :delete class: "btn btn-sm btn-ganger" %>
             <% else %>
              <%= link_to "Join this group",group_join_path(group), class: "btn btn-sm btn-success" %>
             <% end %>

            

          </td>
        </tr>
      </table>

    </div>
  </div>
</div>